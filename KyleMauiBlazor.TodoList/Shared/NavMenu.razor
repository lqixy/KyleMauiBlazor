<MList>
    <MListItemGroup>
        <MListItem Href="counter">
            <MListItemIcon>
                <MIcon>mdi-star-check-outline</MIcon>
            </MListItemIcon>
            <MListItemTitle>标星任务</MListItemTitle>
        </MListItem>

        <MListItem>
            <MListItemIcon>
                <MIcon>mdi-shape-outline</MIcon>
            </MListItemIcon>
            <MListItemTitle>类别</MListItemTitle>
        </MListItem>

    </MListItemGroup>

    <MListGroup>
        <ActivatorContent>
            <MListItemIcon>
                <MIcon>mdi-shape-outline</MIcon>
            </MListItemIcon>
            <MListItemContent>类别</MListItemContent>
        </ActivatorContent>

        <ChildContent>
            @foreach (var category in categories)
            {
                <MListItem Value="category">
                    <MListItemContent>
                        <MListItemTitle>@category</MListItemTitle>
                    </MListItemContent>
                </MListItem>
            }
        </ChildContent>
    </MListGroup>

    <MListItemGroup>
        <MListItem>
            <MListItemIcon>
                <MIcon>mdi-share-all-outline</MIcon>
            </MListItemIcon>
            <MListItemTitle>分享</MListItemTitle>
        </MListItem>

        <MListItem>
            <MListItemIcon>
                <MIcon>mdi-headset</MIcon>
            </MListItemIcon>
            <MListItemTitle>反馈</MListItemTitle>
        </MListItem>

        <MListItem>
            <MListItemIcon>
                <MIcon>mdi-cog-outline</MIcon>
            </MListItemIcon>
            <MListItemTitle>设置</MListItemTitle>
        </MListItem>

    </MListItemGroup>

</MList>

@code{

    IEnumerable<string> categories = new string[]
    {
        "所有","工作","个人","生日","心愿单"
    };
}



